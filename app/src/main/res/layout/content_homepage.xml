<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.andreadellaporta.explainmypain.Homepage"
    tools:showIn="@layout/activity_homepage"
    android:background="#FFF0A5">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/yourdoctor"
        android:id="@+id/imageView"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Explain My Pain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:textColor="#17615B"/>

    <Button
        android:id="@+id/register"

        android:text="Register"
        android:textColor="#FFF0A5"
        android:textSize="15sp"

        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="32dp"
        android:textAllCaps="false"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:fontFamily="casual"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/patientLogin"

        android:text="Patient Login"
        android:textColor="#17615B"
        android:textSize="15sp"

        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textAllCaps="false"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textStyle="normal|bold"
        android:fontFamily="casual"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/confirmPatient" />

    <Button
        android:id="@+id/confirmPatient"

        android:text="Doctor Login"
        android:textColor="#17615B"
        android:textSize="15sp"

        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textAllCaps="false"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/Or"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Or"
        android:fontFamily="cursive"
        android:textSize="25sp"
        android:textColor="#17615B"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/register"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
