<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_doctor_homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.andreadellaporta.explainmypain.DoctorHomepage"
    tools:showIn="@layout/activity_doctor_homepage"
    android:background="#FFF0A5">

    <TextView
        android:text="Explain My Pain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="#17615B"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/yourdoctor"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_input_black_24dp"
        android:id="@+id/imageButton12"
        android:background="#FFF0A5"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp" />

    <TextView
        android:text="Name Surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:textColor="#17615B"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Select your patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:textColor="#17615B"
        android:textAlignment="center"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/spinner2"
        android:layout_below="@+id/textView17"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"

        android:text="Add new patient"
        android:textColor="#FFF0A5"
        android:textSize="15sp"

        android:background="@drawable/buttonshape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="39dp"
        android:textAllCaps="false"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView18"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView18"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:textColor="#17615B"
        android:textAlignment="center"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"

        android:text="Confirm"
        android:textColor="#17615B"
        android:textSize="15sp"

        android:background="@drawable/buttonshape"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textAllCaps="false"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:fontFamily="casual"
        android:textStyle="normal|bold"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/button" />

</RelativeLayout>
