<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_patient_homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.andreadellaporta.explainmypain.PatientHomepage"
    tools:showIn="@layout/activity_patient_homepage"
    android:background="#FFF0A5">

    <TextView
        android:text="Explain My Pain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="#17615B"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/yourdoctor"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="How do you feel today?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:textColor="#17615B"
        android:textAlignment="center"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Name Surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="30sp"
        android:textColor="#17615B"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="New Pain Entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="17sp"
        android:textColor="#17615B"
        android:layout_below="@+id/imageButton7"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButton10" />

    <TextView
        android:text="Compile your Pain Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="15sp"
        android:textColor="#17615B"
        android:layout_marginTop="33dp"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_toEndOf="@+id/imageButton7" />

    <TextView
        android:text="View your report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="17sp"
        android:textColor="#17615B"
        android:layout_below="@+id/imageButton8"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="#FFF0A5"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/medical"
        android:id="@+id/imageButton7"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="#FFF0A5"
        app:srcCompat="@drawable/painbook"
        android:id="@+id/imageButton10"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:background="#FFF0A5"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/report"
        android:id="@+id/imageButton8"
        android:layout_above="@+id/textView12"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/guida"
        android:id="@+id/imageView4"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/textView10" />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_input_black_24dp"
        android:id="@+id/imageButton12"
        android:background="#FFF0A5"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp" />

    <TextView
        android:text="Hello! I'm here for help you. This is your homepage. You can insert a new pain entry, compile your pain book with your feels and view your reports."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView22"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:textColor="#17615B"
        android:textAlignment="center"
        android:layout_alignStart="@+id/imageButton10"
        android:layout_alignTop="@+id/imageView4" />


</RelativeLayout>
